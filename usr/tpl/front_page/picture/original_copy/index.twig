{% extends '../../page.layout.twig' %}
{% block head_end %}
    <style>
        .picture-header .col-xs-3,
        .picture-header .col-xs-5,
        .picture-header .col-xs-4,
        .picture-header .col-md-4,
        .picture-header .col-md-8,
        .picture-header .col-md-3 {
            padding: 0 2px;
        }

        .picture-header {

        }

        .picture-header .row {
            margin: 0;
        }

        .picture-tag .col-md-7,
        .picture-tag .col-md-5 {
            padding: 0;
        }

        .no-border {
            border: none !important;
        }

        .picture-header .picture-tag {
            border: solid 1px #ddd;
            padding: 0;;
        }

        .tag-header-title {
            border-bottom: solid 1px #ddd;
            line-height: 43px;
            font-size: 16px;;
        }

        .picture-tag-style {
            border-right: solid 1px #ddd;
        }

        .picture-tag-model {
        }

        .picture-tag .tag-item {
            display: inline-block;
            border-bottom: dashed 1px #ccc;
            float: left;
            color: #333;
            text-align: center;
            line-height: 36px;
        }

        .picture-tag .show-two-item .tag-item {
            width: 50%;
        }

        .picture-tag .show-three-item .tag-item {
            width: 33.333%;
        }

        .picture-hot {
        }

        .picture-hot .col-md-4 {

        }

        .picture-hot .col-md-4 img {
            width: 100%;
            height: 200px;
        }

        .picture-star {
        }

        .picture-star img {
            width: 100%;
            height: 100px;
        }

        .picture-fashion {
        }

        .picture-fashion img {
            width: 100%;
            height: 200px;
        }
    </style>
{% endblock %}
{% block app_content %}
    <div class="panel container picture-index">
        <div class="picture-header">
            <div class="row" style="margin: 10px 0;">
                <div class="col-xs-3 picture-tag">
                    <div class="tag-header-title text-center">所有款式</div>
                    <div class="row">
                        <div class="col-md-5 picture-tag-style">
                            <div class="tag-header-title text-center">风格</div>
                            <div class="tag-list show-two-item clearfix">
                                <a href="#" class="tag-item">欧美</a>
                                <a href="#" class="tag-item">韩版</a>
                                <a href="#" class="tag-item">简约</a>
                                <a href="#" class="tag-item">休闲</a>
                                <a href="#" class="tag-item">复古</a>
                                <a href="#" class="tag-item">民族</a>
                            </div>
                        </div>
                        <div class="col-md-7 picture-tag-model">
                            <div class="tag-header-title text-center">款式</div>
                            <div class="tag-list show-three-item clearfix">
                                <a href="#" class="tag-item">长靴</a>
                                <a href="#" class="tag-item">中筒靴</a>
                                <a href="#" class="tag-item">短靴</a>
                                <a href="#" class="tag-item">雪地靴</a>
                                <a href="#" class="tag-item">单鞋</a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-5 picture-hot">
                    <div class="col-md-4">
                        <a href=""><img src="{{ SITE_URL }}/assets/images/tmp/pa1.png" alt=""></a>
                    </div>
                    <div class="col-md-4">
                        <a href="list.html?tag=最新"><img src="{{ SITE_URL }}/assets/images/tmp/pa2.png" alt=""></a>
                    </div>
                    <div class="col-md-4">
                        <a href=""><img src="{{ SITE_URL }}/assets/images/tmp/pa3.png" alt=""></a>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="col-md-4 picture-star">
                        <a href=""><img src="{{ SITE_URL }}/assets/images/tmp/pa4.png" alt=""></a>
                        <a href=""><img src="{{ SITE_URL }}/assets/images/tmp/pa5.png" alt=""></a>
                    </div>
                    <div class="col-md-8 picture-fashion">
                        <a href=""><img src="{{ SITE_URL }}/assets/images/tmp/pa6.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                {% for pic in picture_list %}
                    <div class="col-xs-6 col-md-3">
                        <a href="show-{{ pic.id|id_encode }}.html">
                            <div class="picture-wrapper">
                                <img src="{{ res_url }}{{ pic.main_image }}?x-oss-process=image/resize,m_fixed,w_240,h_240/format,webp"
                                     data-holder-rendered="true" style="height: 240px; width: 100%; display: block;">
                            </div>
                            <div class="picture-tag">
                                <p class="text-danger" style="margin:0;">流行元素</p>
                                <p>{{ pic.picture_tag }}</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
            <a href="list.html" class="btn btn-default text-center btn-block">查看更多</a>
        </div>
    </div>
{% endblock %}