<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">参团信息</h4>
</div>
<div class="modal-body">
    <table class="table m-b-none" style="width: 100%">
        <thead>
        <tr>
            <th>参团编号</th>
            <th>参团用户</th>
            <th>购买数量</th>
            <th>参团时间</th>
            <th>支付状态</th>
        </tr>
        </thead>
        <tbody>
        {% for a in dataList %}
            <tr>
                <td>{{ a.id }}</td>
                <td>{{ a.member_id }}</td>
                <td>{{ a.buy_count }}</td>
                <td>{{ a.create_time|date('Y-m-d H:i') }}</td>
                <td>
                    <span class="label {{ a.pay_status == 1 ?'bg-primary':'bg-danger' }}">
                        {{ a.pay_status == 1 ?'已':'未' }}支付</span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">还没有人参团</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">确定</button>
</div>