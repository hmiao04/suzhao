{% extends '../page.layout.twig' %}
{% block block_class_name %}data-list-page{% endblock %}
{% block app_content %}
    <div class="container" style="margin-top: 10px;">
        <div class="panel data-list-wrapper">
            <div class="panel-title">
                <span>推荐团购</span>
                <a href="list.html?sort=top" class="pull-right">查看更多</a>
            </div>
            <div class="panel-body data-list-container">
                <div class="row">
                    {% for item in recommendList %}
                        <div class="col-item-5">
                            <a href="detail.html?id={{ item.id }}" class="list-img" target="t_g_{{ item.id }}">
                                <div class="img"><img src="{{ res_url }}{{ item.main_image }}" alt="{{ item.title }}"></div>
                            </a>
                            <div>
                                <a href="detail.html?id={{ item.id }}" class="list-title" target="t_g_{{ item.id }}">
                                    <p class="item-title">{{ item.title }}</p>
                                    <p class="item-desc">{{ item.goods_name }}</p>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="panel data-list-wrapper">
            <div class="panel-title">
                <span>最新团购</span>
                <a href="list.html?sort=new" class="pull-right">查看更多</a>
            </div>
            <div class="panel-body data-list-container">
                <div class="row">
                    {% for item in newList %}
                        <div class="col-item-5">
                            <a href="detail.html?id={{ item.id }}" class="list-img" target="t_g_{{ item.id }}">
                                <div class="img"><img src="{{ res_url }}{{ item.main_image }}" alt="{{ item.title }}"></div>
                            </a>
                            <div>
                                <a href="detail.html?id={{ item.id }}" class="list-title" target="t_g_{{ item.id }}">
                                    <p class="item-title">{{ item.title }}</p>
                                    <p class="item-desc">{{ item.goods_name }}</p>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}